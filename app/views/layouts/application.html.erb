<!DOCTYPE html>
<html>
  <head>
    <title>Oguz Bayat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="sidebar">
  		<div id="logo">
  			<%= link_to root_path do %>
  				<%= image_tag "logo.svg" %>
  			<% end %>
  		</div>

  		<ul>
  			<li class="category">Blog</li>
  			<li><%= link_to "Yazılar", root_path %></li>
  			<li><%= link_to "Hakkımda", about_path %></li>
  		</ul>

  		<ul>
  			<li class="category">Sosyal Medya</li>
  			<li><a href="https://twitter.com/oguzzbyt">Twitter</a></li>
  			<li><a href="https://www.instagram.com/oguzbyt/">Instagram</a></li>
  			<li><a href="https://github.com/OguzBayat">Github</a></li>
  			<li><a href="mailto:oguzbayat77@gmail.com">E Posta</a></li>
  		</ul>

      <% if !user_signed_in? %>
  		  <p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
      <% end %>
  	</div>

  	<div id="main_content">
  		<div id="header">
        <% if current_page?(root_path) %>
  			 <p>Yazılar</p>
        <% elsif current_page?(about_path) %>
          <p>Hakkımda</p>
        <% else %>
          <%= link_to "Yazılara Dön", root_path %>
        <% end %>

        <% if user_signed_in? %>
    			<div class="buttons">
    				<button class="button"><%= link_to "Yeni Yazı Ekle", new_post_path %></button>
    				<button class="button"><%= link_to 'Çıkış', destroy_user_session_path, :method => :delete %></button>
    			</div>
        <% end %>
  		</div>

  		<% flash.each do |name, msg| %>
  			<%= content_tag(:div, msg, class: "alert") %>
  		<% end %>

  		<%= yield %>

  	</div>

    
  </body>
</html>
